<div class="row">
    <div class="col">
        <div class="box text-center">
            <h2>SignUp page</h2>

            <div class="signUp__form">
                <div class="errors__container"></div>
                <form role="form" method="post" action="/signUp">
                    <div class="divider-form"></div>

                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="Your email" name="email" required>
                    </div>

                    <div class="divider-form"></div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Your password" name="password" required>
                    </div>

                    <div class="divider-form"></div>

                    <div class="form-group">
                        <label for="passwordConfirm">Password confirmation:</label>
                        <input type="password" class="form-control" id="passwordConfirm" placeholder="Confirm your password"
                               name="passwordConfirm" required>
                    </div>

                    <div class="divider-form"></div>

                    <p class="text-center">You agree to the <strong>Terms &amp; Conditions</strong>.</p>

                    <button id="btnSignUp" type="submit" class="btn-block btn btn-lg btn-primary">Sign Up</button>
                </form>
            </div>
            <div class="signUp__success hidden">
                <p>Thanks for Sign Up</p>
                <p>Please check your email and perform instructions to continue registration</p>
            </div>
        </div>
    </div>
</div>