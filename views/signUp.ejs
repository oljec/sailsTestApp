<div class="login__container col-sm-8">
    <div class="row">
        <div class="col-sm-11 text-center">
            <h2>Sign Up</h2>
            <% if ( typeof errorMsg !== 'undefined' ) {%>
            <h4 class="red"><%= errorMsg %></h4>
            <% } %>
            <form method="post" action="/signUp">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" placeholder="Your email" name="email"
                           value="<%= (typeof email !== 'undefined') ? email : ""%>" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" placeholder="Your password" name="password" required>
                </div>
                <div class="form-group">
                    <label for="passwordConfirm">Password confirmation:</label>
                    <input type="password" class="form-control" id="passwordConfirm" placeholder="Confirm your password" name="passwordConfirm" required>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="agree" value="true" required> Agree to confirm
                            </label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
    </div>
</div>